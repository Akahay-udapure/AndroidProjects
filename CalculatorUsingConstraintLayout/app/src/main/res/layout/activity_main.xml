<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculator Using Constaint Layout"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <Button
        android:id="@+id/e"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:text="e"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/zero"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/e" />

    <Button
        android:id="@+id/dot"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:text="."
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/zero" />

    <Button
        android:id="@+id/equal"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:text="="
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/dot" />
    <Button
        android:id="@+id/one"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/equal" />
    <Button
        android:id="@+id/two"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@id/one"
        app:layout_constraintBottom_toTopOf="@id/zero" />
    <Button
        android:id="@+id/three"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@id/two"
        app:layout_constraintBottom_toTopOf="@id/dot" />
    <Button
        android:id="@+id/plus"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@id/three"
        app:layout_constraintBottom_toTopOf="@id/equal" />
    <Button
        android:id="@+id/four"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:text="4"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/one" />
    <Button
        android:id="@+id/five"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:text="5"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@id/four"
        app:layout_constraintBottom_toTopOf="@id/two" />
    <Button
        android:id="@+id/six"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:text="6"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@id/five"
        app:layout_constraintBottom_toTopOf="@id/three" />
    <Button
        android:id="@+id/minus"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@id/six"
        app:layout_constraintBottom_toTopOf="@id/plus" />
    <Button
        android:id="@+id/seven"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:text="7"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/four" />
    <Button
        android:id="@+id/eight"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:text="8"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@id/seven"
        app:layout_constraintBottom_toTopOf="@id/five" />
    <Button
        android:id="@+id/nine"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:text="9"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@id/eight"
        app:layout_constraintBottom_toTopOf="@id/six" />
    <Button
        android:id="@+id/mul"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:text="x"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@id/nine"
        app:layout_constraintBottom_toTopOf="@id/minus" />
    <Button
        android:id="@+id/clear"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:text="AC"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/seven" />
    <Button
        android:id="@+id/sclear"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:text="C"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@id/clear"
        app:layout_constraintBottom_toTopOf="@id/eight" />
    <Button
        android:id="@+id/parcent"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:text="%"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@id/sclear"
        app:layout_constraintBottom_toTopOf="@id/nine" />
    <Button
        android:id="@+id/div"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:text="/"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@id/parcent"
        app:layout_constraintBottom_toTopOf="@id/mul" />

</androidx.constraintlayout.widget.ConstraintLayout>