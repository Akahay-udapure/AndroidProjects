<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPasswordActivity"
    android:background="#030303">
    <TextView
        android:id="@+id/forgotPasswordBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:drawableStart="@drawable/back"
        />
    <TextView
        android:id="@+id/forgotPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/forgotPasswordBack"
        android:layout_marginStart="40dp"
        android:layout_marginTop="15dp"
        android:text="Recover Your Password"
        android:fontFamily="@font/urbanist_bold"
        android:textColor="@color/white"
        android:textSize="25sp"
        />
    <TextView
        android:id="@+id/forgotPasswordContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/forgotPassword"
        android:layout_marginStart="40dp"
        android:layout_marginTop="15dp"
        android:text="Please enter the email weâ€™ll send you validation code."
        android:fontFamily="@font/urbanist_medium"
        android:textColor="@color/white"
        android:layout_marginEnd="20dp"
        />

    <EditText
        android:id="@+id/forgotPasswordEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/forgotPasswordContent"
        android:drawableStart="@drawable/mail"
        android:hint="Email"
        android:textColorHint="#FFFFFF"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/urbanist_medium"
        android:layout_marginStart="40dp"
        android:padding="20dp"
        android:drawablePadding="20dp"
        />

    <Button
        android:id="@+id/forgotPasswordConfimBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#EA0A2A"
        android:text="Confirm"
        android:fontFamily="@font/urbanist_bold"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="23dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/forgotPasswordEmail"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:padding="15dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>