<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetAccountActivity"
    android:background="#030303">

    <TextView
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:drawableStart="@drawable/back"
        />
    <TextView
        android:id="@+id/recoverAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back"
        android:layout_marginStart="50dp"
        android:layout_marginTop="15dp"
        android:text="Recover Your Account"
        android:fontFamily="@font/urbanist_bold"
        android:textColor="@color/white"
        android:textSize="25sp"
        />
    <TextView
        android:id="@+id/reacoverContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recoverAccount"
        android:layout_marginStart="50dp"
        android:layout_marginTop="15dp"
        android:text="Please enter the email or phone number associated with your account and weâ€™ll send you a message to proceed forward."
        android:fontFamily="@font/urbanist_medium"
        android:textColor="@color/white"
        />

    <EditText
        android:id="@+id/recoverEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reacoverContent"
        android:drawableStart="@drawable/phone"
        android:hint="Email or Phone number"
        android:textColorHint="#FFFFFF"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/urbanist_medium"
        android:layout_marginStart="40dp"
        android:padding="20dp"
        android:drawablePadding="20dp"/>

    <Button
        android:id="@+id/confimBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#EA0A2A"
        android:text="Confirm"
        android:fontFamily="@font/urbanist_bold"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="23dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recoverEmail"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:padding="15dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>