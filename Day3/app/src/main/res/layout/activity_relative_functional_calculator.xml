<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:background="@drawable/bg"
    tools:context=".RelativeActivityFunctionalCalculator">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculator"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="30sp"/>

    <EditText
        android:id="@+id/firstNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter first number"
        android:padding="10dp"
        android:inputType="number"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/border"
        android:layout_marginTop="80dp"

        />
    <EditText
        android:id="@+id/secondNo"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter second number"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:padding="10dp"
        android:layout_below="@id/firstNo"
        android:background="@drawable/border"
        android:layout_marginTop="30dp"
        />

    <Button
        android:id="@+id/addBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/secondNo"
        android:layout_marginTop="30dp"
        android:text="Add" />
    <Button
        android:id="@+id/subBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/secondNo"
        android:layout_toRightOf="@id/addBtn"
        android:layout_marginTop="30dp"
        android:text="Sub" />
    <Button
        android:id="@+id/mulBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/secondNo"
        android:layout_toRightOf="@id/subBtn"
        android:layout_marginTop="30dp"
        android:text="Mult" />
    <Button
        android:id="@+id/divBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/secondNo"
        android:layout_toRightOf="@id/mulBtn"
        android:layout_marginTop="30dp"
        android:text="Div" />

    <TextView
        android:id="@+id/resultBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/subBtn"
        android:layout_toRightOf="@id/addBtn"
        android:textSize="30sp"
        android:layout_marginTop="50dp"
        android:text="Result" />

</RelativeLayout>